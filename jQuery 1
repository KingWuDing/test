<script>
$(document).ready(function(){
  $("button").click(function () {
    $("#div1").load("try/ajax/demo.txt",function(responseTxt,statusTxt,xhr){
      if(statusTxt=="success")
      alert("success");
      if(statusTxt=="error()")
      alert("error:"+xhr.status+":"+xhr.statusTxt);
    });
  });
});

